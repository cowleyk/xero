{
  "nio/XeroPut": {
    "version": "0.1.0",
    "description": "Block to add invoices and manual journal entries to a Xero account",
    "properties": {
      "consumer_key": {
        "title": "Xero Consumer Key",
        "type": "StringType",
        "description": "API Key from Xero",
        "default": "[[XERO_CONSUMER_KEY]]"
      },
      "contact_name": {
        "title": "Customer(Contact) Name",
        "type": "StringType",
        "description": "Name of customer invoiced",
        "default": "{{ $customer_name }}"
      },
      "invoice_type": {
        "title": "Invoice Type",
        "type": "StringType",
        "description": "Either ACCREC for receivables or ACCPAY for payables",
        "default": "ACCREC"
      },
      "line_items": {
        "title": "Invoice Line Item",
        "type": "ObjectType",
        "description": "Information about the transaction",
        "default": {}
      }
    },
    "inputs": {
      "default": {
        "description": "Any list of signals containing relevant accounting data"
      }
    },
    "outputs": {
      "default": {
        "description": "Put esponse from Xero invoice and manual journal"
      }
    },
    "commands": {}
  }
}